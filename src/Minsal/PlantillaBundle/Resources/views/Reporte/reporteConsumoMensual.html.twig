{% extends 'base.html.twig' %}
{% block css %}
	{{ parent() }}
	<link href="{{asset('assets/')}}plugins/bower_components/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
	<link href="{{asset('assets/')}}plugins/bower_components/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">

{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-6">
            <div class="white-box">
                <h3 class="box-title m-b-0">Promedios de Consumo Mensual</h3>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <form>
                        	<div class="form-group">
                        		<label>Region:</label>
                        		<select>
								  <option id="region0">[ Todas las regiones ]</option>
								  {# aqui va el for de regiones #}
								  {% for region in regiones %}
								  	<option id="region{{ region.id }}">{{ region.nombre }}</option>
								  {% endfor %}

								</select>

                        	</div>
                            <div class="form-group">
                        		<label>SIBASI</label>
                        		<select>
								  <option id="sibasi0">[ Todas las SIBASIS ]</option>
								  {# aqui va el for de SIBASIS #}
								  {% for sibasi in sibasis %}
								  	<option id="sibasi{{ sibasi.id }}">{{ sibasi.nombre }}</option>
								  {% endfor %}
								 </select>

                        	</div>
                            <div class="form-group">
                        		<label>Establecimientos</label>
                        		<select>
								  {# aqui va el for de Establecimientos #}
								  <option id="estab0">[ Todos los Establecimientos ]</option>
								  {% for establecimiento in establecimientos %}
								  	<option id="establecimiento{{ establecimiento.id }}">{{ establecimiento.nombre }}</option>
								  {% endfor %}
								</select>

                        	</div>
                            
                            <div class="form-group">
                                {# aqui habia dejado un data picker de rango de fechas #}
                                <label>Perido:</label>
                                
                                	<select>
									  <option>Enero</option>
									  <option>Febrero</option>
									  <option>Marzo</option>
									  <option>Abril</option>
									  <option>Mayo</option>
									  <option>Junio</option>
									  <option>Julio</option>
									  <option>Agosto</option>
									  <option>Septiembre</option>
									  <option>Agosto</option>
									  <option>Octubre</option>
									  <option>Noviembre</option>
									  <option>Diciembre</option>
									</select>

									<select>
									  <option>2017</option>
									  <option>2016</option>
									</select>
									<span>--A--</span>

									<select>
									  <option>Enero</option>
									  <option>Febrero</option>
									  <option>Marzo</option>
									  <option>Abril</option>
									  <option>Mayo</option>
									  <option>Junio</option>
									  <option>Julio</option>
									  <option>Agosto</option>
									  <option>Septiembre</option>
									  <option>Agosto</option>
									  <option>Octubre</option>
									  <option>Noviembre</option>
									  <option>Diciembre</option>
									</select>

									<select>
									  <option>2017</option>
									  <option>2016</option>
									</select>
                            </div>
                            <a class="btn btn-info" id="generador">Generar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {# grafico #}
		<div class="col-md-6">
			grafico
		</div>

	</div>
{% endblock %}
{% block js %}
	{{ parent() }}
    <script src="{{ asset('assets/') }}plugins/bower_components/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <script src="{{ asset('assets/') }}plugins/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="{{ asset('assets/') }}highcharts/highcharts.src.js"></script>
    <script src="{{ asset('assets/') }}highcharts/drilldown.js"></script>



{% endblock %}